import { NextResponse } from 'next/server'
import { createClient } from '@/lib/supabase/server'
import { cookies } from 'next/headers'

export async function GET(request: Request) {
    const { searchParams, origin } = new URL(request.url)
    const code = searchParams.get('code')
    const next = searchParams.get('next') ?? '/'

    if (code) {
        const supabase = await createClient()
        console.log("Auth Callback: Exchanging code for session...")
        const { data, error } = await supabase.auth.exchangeCodeForSession(code)

        if (!error && data?.session) {
            console.log("Auth Callback: Session exchanged successfully.")

            // MANUAL SESSION PERSISTENCE
            // Since the library fails to set the cookie, we do it manually.
            // Note: The cookie name format is `sb-<project-ref>-auth-token`
            const projectRef = process.env.NEXT_PUBLIC_SUPABASE_URL!.split('.')[0].split('//')[1]
            const cookieName = `sb-${projectRef}-auth-token`

            // Serialize session data similarly to how GoTrueClient does it
            // It expects: ["access_token","refresh_token"]
            const sessionValue = JSON.stringify([data.session.access_token, data.session.refresh_token])

            // Create response first
            let response: NextResponse
            const forwardedHost = request.headers.get('x-forwarded-host')
            const isLocal = origin.includes('localhost')
            if (isLocal) {
                response = NextResponse.redirect(`${origin}${next}?debug_auth=success`)
            } else {
                const forwardedProto = request.headers.get('x-forwarded-proto')
                if (forwardedHost && forwardedProto) {
                    response = NextResponse.redirect(`${forwardedProto}://${forwardedHost}${next}`)
                } else {
                    response = NextResponse.redirect(`${origin}${next}`)
                }
            }

            // Set the cookie on the response
            console.log(`Auth Callback: Manually saving session to cookie: ${cookieName}`)
            response.cookies.set(cookieName, sessionValue, {
                path: '/',
                maxAge: 60 * 60 * 24 * 7, // 1 week
                sameSite: 'lax',
                secure: process.env.NODE_ENV === 'production',
                httpOnly: false, // Ensure client can see it for now
            })

            return response
        } else {
            console.error("Auth Callback: Error exchanging code:", error)
            return NextResponse.redirect(`${origin}/?error=${encodeURIComponent(error?.message || 'No session found')}`)
        }
    } else {
        console.warn("Auth Callback: No code provided.")
    }

    // Return the user to an error page with instructions
    console.log("Auth Callback: Redirecting to error page.")
    return NextResponse.redirect(`${origin}/auth/auth-code-error`)
}
